<Window x:Class="Sender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sender"
        mc:Ignorable="d"
        Title="Sender" Height="250" Width="400">
    <Grid>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="162,167,0,0" VerticalAlignment="Top" Width="75" Click="btnSend_Click"/>
        <TextBox x:Name="tbxMessage" Height="138" Margin="10,24,9.6,0" TextWrapping="Wrap" VerticalAlignment="Top" VerticalScrollBarVisibility="Visible"/>
        <TextBlock HorizontalAlignment="Left" TextAlignment="Center" Margin="10,8,0,0" TextWrapping="Wrap" Text="Type your message here" VerticalAlignment="Top" Width="374"/>
    </Grid>
</Window>
